@model IEnumerable<Sispar.Core.Entities.Tither>

@{
    ViewBag.Title = "Index";
}

<h2>Listagem de Dizimistas</h2>

<div>
    <a class="btn btn-info" href="./Tithers/Add">Adicionar Dizimista</a>
</div>

<br />

<table class="table table-striped table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Nome</th>
            <th>Dt. Nascimento</th>
            <th>CPF</th>
            <th>Nome da Esposa</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tither in Model)
        {
            <tr>
                <td>@tither.Name</td>
                <td>@tither.BirthDate.ToString("dd/MM/yyyy")</td>
                <td>@tither.CPF</td>
                <td>@tither.NameSpouse</td>
            </tr>
        }
    </tbody>
</table> 